{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "./dist"
  },
  "include": [
    "./src/*",
    "./test/*",
    "./typings/*"       
  ],
  "exclude": [
    "./node_modules",
    ".vscode"
  ]
}